<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.springboot_jsp_shiro.dao.BzUserMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.chen.springboot_jsp_shiro.entity.BzUser">
        <id column="id" property="id" />
        <result column="username" property="username" />
        <result column="password" property="password" />
        <result column="salt" property="salt" />
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        id, username, password, salt
    </sql>
    <insert id="saveBzUser" parameterType="com.chen.springboot_jsp_shiro.entity.BzUser" useGeneratedKeys="true" keyProperty="id">
        insert into bz_user values (#{id},#{username},#{password},#{salt})
    </insert>
    <select id="findBzUserByName" resultType="com.chen.springboot_jsp_shiro.entity.BzUser">
        select <include refid="Base_Column_List"></include>
        from bz_user where username = #{username}
    </select>

</mapper>
