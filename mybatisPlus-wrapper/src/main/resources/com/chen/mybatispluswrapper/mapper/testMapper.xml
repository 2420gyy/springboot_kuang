<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.chen.mybatispluswrapper.mapper.TestMapper">


    <insert id="insertUser" parameterType="com.chen.mybatispluswrapper.entity.test">
        <selectKey keyProperty="id" order="AFTER" resultType="java.lang.Integer">
            select last_insert_id()
        </selectKey>
        insert into test(name) values (#{name})
    </insert>
    <select id="ss">

    </select>
    <select id="selectPerson" parameterType="int" resultType="java.util.HashMap">
        SELECT * FROM test WHERE ID = #{id}
    </select>
    <select id="selectByName" resultType="com.chen.mybatispluswrapper.entity.test">
        select * from test where name = #{i}
    </select>
    <select id="selectByIdAndName" resultType="com.chen.mybatispluswrapper.entity.test">
        select * from test where name = #{testName} and  id = #{id}
    </select>
<!--        select * from test where id = #{id} and name = #{name}-->
</mapper>
